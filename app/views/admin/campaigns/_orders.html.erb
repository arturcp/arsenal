<div class="row">
  <div class="col s12">
    <div class="card-panel">
      <table class="striped" data-orders-list>
        <thead>
          <tr>
            <th>Nome</th>
            <th>Email</th>
            <th>Produtos</th>
            <th>Valor total</th>
            <th>Data</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% campaign.orders.each do |order| %>
            <%= render 'order_row', order: order %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%= link_to '#new-order-modal' do %>
  <%= render 'admin/button', text: 'Cadastrar nova compra' %>
<% end %>

<%= render 'new_order', campaign: campaign %>
