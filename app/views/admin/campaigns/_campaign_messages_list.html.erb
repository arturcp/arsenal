<% buttons ||= [] %>

<section class="campaign-messages-list">
  <div class="row">
    <div class="col s12">
      <div class="card-panel">
        <div class="row">
          <table class="striped">
            <thead>
              <tr>
                <th>Nome</th>
                <th>Email</th>
                <th>Mensagem</th>
                <th colspan="2"></th>
              </tr>
            </thead>

            <tbody>
              <% messages.each do |message| %>
                <tr>
                  <td><%= message.author %></td>
                  <td><%= message.email %></td>
                  <td><%= message.message %></td>

                  <% if buttons.include?(:approve) %>
                    <td>
                      <%= link_to 'javascript:;', class: 'approve-message', data: { approve_message: true } do %>
                        <i class="fa fa-thumbs-up"></i>
                      <% end %>
                    </td>
                  <% end %>

                  <% if buttons.include?(:reject) %>
                    <td>
                      <%= link_to 'javascript:;', class: 'reject-message', data: { reject_message: true } do %>
                        <i class="fa fa-thumbs-down"></i>
                      <% end %>
                    </td>
                  <% end %>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

</section>
