<% buttons ||= [] %>

<section class="campaign-messages-list">
  <div class="row">
    <div class="col s12">
      <div class="card-panel">
        <div class="row">
          <table class="striped">
            <thead>
              <tr>
                <th>Nome</th>
                <th>Email</th>
                <th>Mensagem</th>
                <th colspan="2"></th>
              </tr>
            </thead>

            <tbody>
              <% messages.each do |message| %>
                <tr>
                  <td><%= message.author %></td>
                  <td><%= message.email %></td>
                  <td><%= message.message %></td>

                  <td>
                    <%= link_to 'javascript:;', class: "approve-message #{'hide' unless buttons.include?(:approve)}",
                      data: { approve_message: message.id } do %>
                      <i class="fa fa-thumbs-up"></i>
                    <% end %>
                  </td>

                  <td>
                    <%= link_to 'javascript:;', class: "reject-message #{'hide' unless buttons.include?(:reject)}",
                      data: { reject_message: message.id } do %>
                      <i class="fa fa-thumbs-down"></i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

</section>
