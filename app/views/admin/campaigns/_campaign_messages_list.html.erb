<section class="campaign-messages-list">
  <div class="row">
    <div class="col s12">
      <div class="card-panel">
        <div class="row">
          <table class="striped">
            <thead>
              <tr>
                <th>Nome</th>
                <th>Email</th>
                <th>Mensagem</th>
                <th colspan="2"></th>
              </tr>
            </thead>

            <tbody>
              <% messages.each do |message| %>
                <tr>
                  <td><%= message.author %></td>
                  <td><%= message.email %></td>
                  <td><%= message.message %></td>

                  <td>
                  </td>
                  <td>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

</section>
