    </div>
  </div>

  <div class="row">
    <div class="input-field col s12">
      <%= f.label 'descrição', class: label_class %>
      <%= f.text_field :description %>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12">
      <%= f.label 'Imagem na home', class: label_class %>
      <%= f.text_field :main_image_url %>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s12">
      <%= f.cktext_area :body, rows: 10 %>
    </div>
  </div>

  <p>
    &nbsp;
  </p>

  <div class="row">
    <div class="input-field col s12">
      <%= render 'admin/button', text: 'Salvar' %>
