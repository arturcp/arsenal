<div class="row">
  <div class="col s12">
    <div class="card-panel">
      <h4 class="header2">Compras</h4>
      <table class="striped">
        <thead>
          <tr>
            <th>Nome</th>
            <th>Email</th>
            <th>Produtos</th>
            <th>Valor total</th>
            <th>Data</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% campaign.orders.each do |order| %>
            <tr>
              <td><%= order.name %></td>
              <td><%= order.email %></td>
              <td>
                <ul>
                  <% order.items.each do |item| %>
                    <li><%= item['quantity'] %> <%= item['description'] %> = <%= number_to_currency(item['amount']) %></li>
                  <% end %>
                </ul>
              </td>
              <td><%= number_to_currency(order.price) %></td>
              <td><%= order.created_at.strftime('%d/%m/%Y') %></td>
              <td>
                <%= link_to 'javascript:;', data: { reference: order.reference } do %>
                  <i class="fa fa-eye"></i>
                <% end %>
              </td>
            </tr>

            <tr class="order-description" id="order-description-<%= order.reference %>">
              <td colspan="7">
                <div>
                  <p><b>Código de referência:</b> <br /> <%= order.reference %></p><b></b>
                  <% if order.comments %>
                    <p>
                      <b>Comentário do usuário:</b> <br /> <%= order.comments %>
                    </p>
                  <% end %>
                  <p>&nbsp;</p>
                  <p>Compra efetuada em <%= order.created_at.strftime('%d/%m/%Y %H:%M') %>h</p>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%= button_tag 'Cadastrar nova compra', class: 'btn save-button waves-effect waves-light right' %>
