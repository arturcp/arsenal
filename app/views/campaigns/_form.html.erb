    <%= f.label :end_date %>
    <%= f.datetime_select :end_date, {}, class: 'select-date' %>
    <br />
  </div>

  <div class="field">
    <%= f.label :campaign_type %>
    <%= f.number_field :campaign_type %>
  </div>

  <div class="actions">
    <%= f.submit 'Save', class: 'waves-effect waves-light btn' %>
  </div>
